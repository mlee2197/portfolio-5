---
import { Image } from "astro:assets";
import FaceId from "../assets/icons/face-id.svg";
import Folder from "../assets/icons/folder.svg";
import Fish from "../assets/icons/fish.svg";
import Download from "../assets/icons/download.svg";

// Navigation items with icons and titles
const navItems = [
  {
    icon: FaceId,
    title: "About Me"
  },
  {
    icon: Folder,
    title: "Projects"
  },
  {
    icon: Fish,
    title: "My Cats"
  }
];
---

<nav class="navbar">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="flex items-center justify-between h-16">
      <!-- Left side - Navigation items -->
      <div class="flex items-center space-x-8">
        {navItems.map((item, index) => (
          <div class="nav-item group relative">
            <div class="flex items-center space-x-2">
              <Image 
                src={item.icon} 
                alt={item.title}
                width={24} 
                height={24}
                class="nav-icon transition-transform duration-300 group-hover:scale-110"
              />
              <span class="nav-title text-lg font-medium text-gray-900 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                {item.title}
              </span>
            </div>
          </div>
        ))}
      </div>

      <!-- Right side - Resume button -->
      <div class="flex items-center">
        <a 
          href="/src/assets/Matthew_Lee_Resume_2025.pdf"
          download="Matthew_Lee_Resume_2025.pdf"
          class="resume-button flex items-center space-x-2 bg-secondary text-white px-4 py-2 rounded-lg hover:bg-secondary/90 transition-colors duration-200"
        >
          <Image 
            src={Download} 
            alt="Download"
            width={16} 
            height={16}
            class="download-icon"
          />
          <span class="text-sm font-medium">Resume</span>
        </a>
      </div>
    </div>
  </div>
</nav>
