---
import LinkedIn from "../assets/icons/linkedin.svg";
import Github from "../assets/icons/github.svg";

// Social media items array
const socialItems = [
  {
    name: "LinkedIn",
    icon: LinkedIn,
    href: "https://www.linkedin.com/in/matthewlee1297/",
    tooltip: "LinkedIn",
  },
  {
    name: "Github",
    icon: Github,
    href: "https://github.com/mlee2197",
    tooltip: "GitHub",
  },
];
---

<footer class="border-t-2 border-gray-200">
  <div
    class="w-full max-w-[var(--content-width)] mx-auto flex flex-col items-start gap-4 p-4 border-x border-dashed border-gray-300
      sm:flex-row sm:items-center sm:justify-between sm:gap-0 sm:py-6"
  >
    <div class="flex flex-col gap-1">
      <span class="font-bold text-lg">
        Matthew Lee
      </span>
      <a href="mailto:mlee2197@gmail.com" class="text-gray-600 hover:underline">
        mlee2197@gmail.com
      </a>
    </div>
    <div class="flex gap-5 sm:gap-4">
      {socialItems.map((item) => (
        <a
          href={item.href}
          target="_blank"
          rel="noopener"
          aria-label={item.tooltip}
          class="opacity-80 transition-opacity duration-200 cursor-pointer hover:opacity-100"
        >
          <img src={item.icon.src} alt={item.name} class="w-7 h-7" />
        </a>
      ))}
    </div>
  </div>
</footer>
